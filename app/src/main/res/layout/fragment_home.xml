<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
android:layout_toLeftOf="@+id/streak"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/fire" />

    <TextView
        android:id="@+id/streak"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lexend_extra_bold"
        android:text="0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:fontFamily="@font/lexend_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>


    <RelativeLayout
        android:id="@+id/overview_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_rectangular_border">


        <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/overview"
          android:background="@drawable/background_rectangular_border"

          android:scaleType="fitXY" />
      <View
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/background_rectangular_border"
          android:backgroundTint="#99000000"
          />
      <TextView
          android:id="@+id/next"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="5dp"
          android:fontFamily="@font/lexend_extra_bold"
          android:padding="12dp"
          android:text="Overview"
          android:layout_centerInParent="true"
          android:textColor="@color/white"
          android:textSize="25sp" />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/exercise_layout"
      android:layout_width="match_parent"
      android:layout_height="170dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/background_rectangular_border"
      >
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/exercise_details"
          android:background="@drawable/background_rectangular_border"
          android:scaleType="fitXY" />
      <View
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/background_rectangular_border"
          android:backgroundTint="#99000000"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="5dp"
          android:fontFamily="@font/lexend_extra_bold"
          android:padding="12dp"
          android:text="Exercise Details"
          android:textColor="@color/white"
          android:textSize="25sp" />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/start_layout"
      android:layout_width="match_parent"
      android:layout_height="170dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/background_rectangular_border"
      >
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/logo"
          android:padding="10dp"
          android:backgroundTint="@color/white"
          android:background="@drawable/background_rectangular_border"
        />
      <View
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/background_rectangular_border"
          android:backgroundTint="#99000000"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="5dp"
          android:fontFamily="@font/lexend_extra_bold"
          android:padding="12dp"
          android:text="Start Exercise"
          android:textColor="@color/white"
          android:textSize="25sp" />
  </RelativeLayout>
</LinearLayout>