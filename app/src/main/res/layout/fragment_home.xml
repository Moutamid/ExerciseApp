<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/streak"
            android:src="@drawable/fire" />

        <TextView
            android:id="@+id/streak"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/lexend_extra_bold"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lexend_medium"
            android:text="Dashboard"
            android:textColor="@color/black"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/overviewLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="16dp"
        android:textAllCaps="true"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_rectangular_border"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lexend_semi_bold"
        android:padding="12dp"
        android:text="Why workout at home"
        android:textColor="@color/black"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/exerciseLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="16dp"
        android:layout_height="150dp"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_rectangular_border"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lexend_semi_bold"
        android:padding="12dp"
        android:text="Workouts \n&amp;\nExercises"
        android:textColor="@color/black"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/startLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="16dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_rectangular_border"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lexend_semi_bold"
        android:padding="12dp"
        android:textAllCaps="true"
        android:text="Exercise demonstration\nvideos"
        android:textColor="@color/black"
        android:textSize="17sp" />

</LinearLayout>