<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.ExerciseActivity">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/back_btn"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:elevation="2dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lexend_extra_bold"
            android:text="LATERAL RAISES"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexend_light"
            android:text="(while reviewing workload and planning day)"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="33dp" />

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="One"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percentage"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="Set"
            android:textColor="#5E5C5C"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="37dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percentage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="Reps"

            android:textColor="#5E5C5C"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:src="@drawable/pause"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:src="@drawable/play"
            android:visibility="gone"
            app:tint="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg"
        android:onClick="back"
        android:padding="8dp"
        android:src="@drawable/return_btn" />

    <TextView
        android:id="@+id/next_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/lexend_semi_bold"
        android:gravity="center"
        android:onClick="next"
        android:padding="6dp"
        android:text="Next"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>